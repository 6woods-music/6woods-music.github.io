---
import { markdownify } from "@/lib/utils/textConverter";

const { pricing } = Astro.props;
const { title, description, pricing_table, pricing_explanations } = pricing;
---

<section class="section pricing" id="pricing">
  <div class="container">
    <div class="row justify-between text-center lg:text-start">
      <div class="lg:col-5">
        <h2 set:html={markdownify(title)} />
      </div>
      <div class="mt-6 lg:col-5 lg:mt-0">
        <p set:html={markdownify(description)} />
      </div>
    </div>
  </div>

  <div class="row mt-[30px] items-center">
    <div class="col-12 mx-auto mb-10 text-center">
      <div class="table-wrapper">
        <table class="pricing-table">
          <tr>
            {pricing_table.headers.map((header) => (
              <th>{header}</th>
            ))}
          </tr>
          {pricing_table.rows.map((row) => (
            <tr>
              {row.map((cell) => (
                <td>{cell}</td>
              ))}
            </tr>
          ))}
        </table>
      </div>

      <div class="explanation">
        <div class="explanation-content">
          {pricing_explanations.map((explanation) => (
            <p>{explanation}</p>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .table-wrapper {
    overflow-x: auto;
    margin: 0 auto;
    max-width: 100%;
  }

  .pricing-table {
    border-collapse: collapse;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    font-weight: bold;
  }

  .pricing-table th,
  .pricing-table td {
    border: 2px solid black;
    padding: 8px;
    background-color: white;
  }

  .explanation {
    max-width: 800px;
    margin: 20px auto;
  }

  .explanation-content {
    text-align: left;
    display: inline-block;
    width: 100%;
  }

  .explanation p {
    margin-bottom: 10px;
  }

  @media (max-width: 768px) {
    .table-wrapper {
      padding: 0 15px;
    }

    .pricing-table {
      font-size: 14px;
    }

    .pricing-table th,
    .pricing-table td {
      padding: 6px;
    }

    .explanation {
      padding: 0 15px;
    }
  }
</style>